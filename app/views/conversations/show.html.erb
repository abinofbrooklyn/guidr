<div id="messages">
  <%= render @conversation %>
</div>

<div id="conversation_footer">
  <%= form_for([@conversation, @message], remote: true) do |form| %>
    <%= form.text_area :body, placeholder: "Type here..." %>
  <% end %>
</div>

<script src="//js.pusher.com/2.2/pusher.min.js" type="text/javascript"></script>

<script>
  var pusher = new Pusher(4e85a1ddd1b775bdb49b);
  var channel = pusher.subscribe('guidr_channel');
  channel.bind('message', function(data) {
      alert(data.message);
      });
</script>

